<configuration debug="true" scan="true" scanPeriod="5 seconds" >

	<include resource="org/springframework/boot/logging/logback/base.xml" />
	<springProperty scope="context" name="appName" source="spring.application.name"/>

	<appender name="splunk" class="com.splunk.logging.TcpAppender">
		<RemoteHost>127.0.0.1</RemoteHost>
		<Port>1514</Port>
		<layout class="com.github.ricardocomar.springbootetl.etlconsumer.config.CustomJsonLayout">
			<timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSX</timestampFormat>
			<timestampFormatTimezoneId>America/Sao_Paulo</timestampFormatTimezoneId>
			<appendLineSeparator>true</appendLineSeparator>
			<jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
				<prettyPrint>false</prettyPrint>
			</jsonFormatter>
			<additionalField>appName|${appName}</additionalField>
		</layout>
	</appender>
	
	<root level="INFO"/>
	
	<logger name="com.github.ricardocomar" additivity="false" level="INFO">
 		<appender-ref ref="splunk" /> 
		<appender-ref ref="CONSOLE" />
	</logger>

</configuration>